{
  "name": "3shop-app",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "specific-apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:storybook": "turbo run build-storybook",
    "dev": "turbo run dev --parallel",
    "generate:graphql": "turbo run generate:graphql",
    "generate:package": "plop --plopfile generators/package.js",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "sort": "sort-package-json",
    "start:storybook": "turbo run storybook"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "**/package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@rainbow-me/rainbowkit": "^0.7.1",
    "@reduxjs/toolkit": "^1.8.6",
    "axios": "^1.1.3",
    "react-redux": "^8.0.4",
    "redux": "^4.2.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.2.0",
    "dotenv": "^16.0.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "prettier": "latest",
    "pure": "*",
    "sort-package-json": "^2.1.0",
    "ts-jest": "^29.0.3",
    "tsconfig": "*",
    "turbo": "latest",
    "types": "*",
    "typescript": "latest"
  },
  "packageManager": "yarn@1.22.17",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
