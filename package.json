{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "start:storybook": "turbo run storybook",
    "build:storybook": "turbo run build-storybook",
    "generate:graphql": "turbo run generate:graphql",
    "prepare": "husky install"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "eslint-config-custom": "*",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "pure": "*",
    "tsconfig": "*",
    "turbo": "latest",
    "types": "*",
    "typescript": "latest",
    "utils": "*",
    "husky": "^8.0.0"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.17"
}
