{
  "name": "3shop-app",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/zkshop/zkshop-app.git",
  "workspaces": [
    "apps/*",
    "packages/*",
    "specific-apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:admin": "yarn build --filter=admin...",
    "build:docs": "yarn build --filter=docs...",
    "build:functions": "yarn build --filter=functions...",
    "build:shop": "yarn build --filter=shop...",
    "dev": "turbo run dev --parallel",
    "dev:admin": "yarn dev --filter=admin...",
    "dev:docs": "yarn dev --filter=docs...",
    "dev:functions": "yarn dev --filter=functions...",
    "dev:shop": "yarn dev --filter=shop...",
    "dotenv:admin": "APP=apps/admin; rm -f $APP/.env && ln -s ../../.env $APP/.env",
    "dotenv:admin:e2e": "APP=apps/admin; rm -f $APP/.env.playwright && ln -s ../../.env $APP/.env.playwright",
    "dotenv:functions": "APP=apps/functions; rm -f $APP/.env && ln -s ../../.env $APP/.env",
    "dotenv:shop": "APP=apps/shop; rm -f $APP/.env && ln -s ../../.env $APP/.env",
    "dotenv:tbw": "APP=specific-apps/tbw; rm -f $APP/.env && ln -s ../../.env $APP/.env",
    "generate:graphql": "turbo run generate:graphql",
    "generate:package": "plop --plopfile generators/package.js",
    "init:env": "yarn dotenv:admin && yarn dotenv:functions && yarn dotenv:shop && yarn dotenv:tbw && yarn dotenv:admin:e2e",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "sort": "sort-package-json package.json apps/*/package.json packages/*/package.json",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:admin": "yarn test:e2e --filter=admin..."
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "**/package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@rainbow-me/rainbowkit": "^0.7.1",
    "@reduxjs/toolkit": "^1.8.6",
    "axios": "^1.1.3",
    "framer-motion": "^7.5.3",
    "react-redux": "^8.0.4",
    "redux": "^4.2.0"
  },
  "devDependencies": {
    "@3shop/eslint-config-custom": "*",
    "@3shop/pure": "*",
    "@3shop/tsconfig": "*",
    "@3shop/types": "*",
    "@types/jest": "^29.2.0",
    "dotenv": "^16.0.1",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "prettier": "latest",
    "sort-package-json": "^2.1.0",
    "ts-jest": "^29.0.3",
    "turbo": "latest",
    "typescript": "latest"
  },
  "packageManager": "yarn@1.22.17",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
