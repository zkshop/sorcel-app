{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@3shop/*": [
        "packages/*"
      ],
      "@infra/*": [
        "apps/functions/infra/*"
      ]
    }
  }
}